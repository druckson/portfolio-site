html(x-ng-app="Portfolio")
    head
        meta(charset="utf-8")
        title Daniel Erickson
        link(rel="stylesheet" type="text/css" href="/css/reset.css")
        link(rel="stylesheet" type="text/css" href="/css/main.css")
        link(rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Quicksand:400,700|Playfair+Display+SC|Glegoo|Josefin+Slab|Dosis")

    body(x-ng-controller="PortfolioController")

        #sidebar
            #name(x-ng-if="name")
                h1 {{name}}
            a(href="/#/skills/") Skills
            a(href="/#/experience/") Experience

        div(x-ng-view)

        script(src="http://code.angularjs.org/1.2.16/angular.min.js")
        script(src="http://code.angularjs.org/1.2.16/angular-route.min.js")
        script(type="text/javascript" src="/js/site.js")
