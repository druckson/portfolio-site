#content-container
    #content
        #experience(x-ng-if="experience")
            h2 Experience
            .job(x-ng-repeat="job in experience")
                h3.position {{job.position}}
                a(href="{{job.link}}").company {{job.company}}
                .location {{job.location}}
                .date {{job.date.start}} - {{job.date.end}} 
                    span(x-ng-if="job.date.qualification") ({{job.date.qualification}})
                .duties
                    .duty(x-ng-repeat="duty in job.duties") {{duty}}
        
        #education(x-ng-if="education")
            h2 Education
            .education-entry(x-ng-repeat="degree in education")
                h3.school {{degree.school}}
                .location {{degree.location}}
                .date {{degree.date}}
                .degree {{degree.degree}}
    
        #projects(x-ng-if="projects")
            h2 Projects
            .project(x-ng-repeat="project in projects")
                h3.name {{project.name}}
                .description {{project.description}}
                .links(x-ng-if="project.links")
                    .link(x-ng-repeat="link in project.links")
                        a(href="{{link.url}}") {{link.name}}
                .images(x-ng-if="project.images")
                    .image(x-ng-repeat="image in project.images")
                        img(ng-src="{{image}}")
                .sketches(x-ng-if="project.sketches")
                    .sketch(x-ng-repeat="sketch in project.sketches")
                        iframe(width="{{sketch.width}}" height="{{sketch.height}}" scrolling="no" frameborder="0" src="{{sketch.url}}")

        #skills.top(x-ng-if="skills")
            h2 Skills
            .skill(x-ng-repeat="(categoryName, category) in skills")
                h3 {{categoryName}}
                ul
                    li(x-ng-repeat="skill in category") {{skill}}
        
        #certifications(x-ng-if="certifications")
            h2 Certifications
            .certification(x-ng-repeat="certification in certifications")
                h3.title {{certification.title}}
                .date {{certification.date}}
                .subject {{certification.subject}}
