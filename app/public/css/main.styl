golden = 1.618

navigationFG = #FFF
navigationBG = #000

mainFG = #000
mainBG = #FFF

headingColor = #2B81D6

.ng-cloak
    display: none

body
    //font-family: 'Quicksand', sans-serif
    font-family: sans-serif
    color: mainFG
    //background-image: url('http://subtlepatterns.com/patterns/mochaGrunge.png')
    //background-repeat: repeat
    background-color: mainBG

    a
        color: mainFG

    h1
        font-family: 'Josefin Slab', serif
        font-size: golden**3 em
        color: headingColor
    
    h2
        font-family: 'Josefin Slab', serif
        font-weight: bold
        margin-top: 0.5*golden**2 em
        font-size: golden**2 em
        color: headingColor
    
    h3
        margin-top: 0.5*golden em
        font-size: golden em

    ul
        list-style-type: circle

    li
        margin-top: 0.5em

    #container
        #navigation-container
            #navigation
                //background-image: url('http://subtlepatterns.com/patterns/zwartevilt.png')
                //background-repeat: repeat
                background-color: navigationBG

                a#name
                    font-size: 1em
            
                ul
                    li
                        list-style-type: none
                a
                    margin-top: 0.5 em
                    text-decoration: none
                    font-size: golden em
                    color: navigationFG

                a.active
                a:hover
                    font-weight: bold
                    color: primaryColor
        
        #content-container
            #content
                h2
                    width: 100%
                    border-bottom: thin solid mainFG
                    display: block
                li
                    margin-left: golden em
            
                #contact
                    //background-color: #800
                #skills
                    //background-color: #080
                #experience
                    //background-color: #008
                #education
                    //background-color: #440
                #projects
                    //background-color: #440
                    .image
                        display: inline
                        img
                            margin: 1em
                    .sketches
                        .note
                            margin: 0 0 0 1em
                        .sketch
                            display: inline
                            canvas
                                margin: 1em
                                border: thin solid secondaryColor
                #certifications
                    //background-color: #044

    @media (min-width:768px)
        #container
            #navigation-container
                width: 24em
                position: absolute
                left: 0
                top: 0
                height: 100%

                #navigation
                    position: absolute
                    right: 0
                    float: left
                    width: 20em
                    height: 100%
                    border-right: 8px solid secondaryColor
                    border-left: 8px solid secondaryColor
                    overflow: auto

                    a#name
                        text-align: right
                        margin: 30px
                    a
                        margin-right: 30px
                        display: block
                        text-align: right

            #content-container
                position: absolute
                left: 24em
                height: 100%
                right: 0
                overflow: auto

                #content
                    max-width: 800px
                    margin: 2em

    @media (min-width:1200px)
        #container
            #navigation-container
                width: 30%
            #content-container
                left: 30%

    @media (max-width:768px)
        width: 100%
        #container 
            display: block
            float: left

            #navigation-container
                #navigation
                    padding: 2em
                    display: block
                    float: left
                    
                    ul
                        float: left
                        display: block
                        width: 100%

                        li
                            display: inline-block

                    a#name
                        margin-top: 2em
                        width: 100%
                        display: block
                        margin: 0
                        text-align: center

                    a
                        float: left
                        margin-right: 1em

            #content-container
                float: left

                #content
                    padding: 2em

                    h2
                        width: 100%

                    #projects
                        .image
                            width: 300px
                            display: block
                            float: center
                            margin: auto
                            img
                                margin: 1em 0 1em 0
                        .sketches
                            .sketch
                                width: 300px
                                display: block
                                float: center
                                margin: auto

                                canvas
                                    margin: 1em 0 1em 0


